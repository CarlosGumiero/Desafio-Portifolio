<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="~/Scripts/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/Scripts/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/resume.min.css" rel="stylesheet">
</head>
<body id="page-top">
    <nav style="background-color: #005e91" class="navbar navbar-expand-lg navbar-dark fixed-top" id="sideNav" > 
        <a class="navbar-brand">
            <span class="d-block d-lg-none">Carlos Gumiero</span>
            <span class="d-none d-lg-block">
                <img class="card-img-bottom card-header rounded-bottom mx-auto mb-2" src="~/img/Carlos.png" alt="">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Projetos", "Projetos", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Skills", "Skills", "Home", new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contato", "Contato", "Home", new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <p>Projeto Meu Portifólio</p>
        </footer>

    </div>

    @Scripts.Render("~/Scripts/vendor/jquery/jquery.min.js")
    @Scripts.Render("~/Scripts/vendor/bootstrap/js/bootstrap.bundle.min.js")
    @Scripts.Render("~/Scripts/vendor/jquery-easing/jquery.easing.min.js")
    @Scripts.Render("~/Scripts/js/resume.min.js")
    @RenderSection("scripts", required: false)
</body>
</html>
